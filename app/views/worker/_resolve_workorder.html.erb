<%= form_for([@workorder,@worklog]) do |f| %>
      <%= render 'worklog_error_message' %>

      <div class="field">
        <%= f.label "Provide details on the work completed" %><br />
        <%= f.text_area :description, :cols => "15", :rows => "8" %> <!--Default text is the current user's building-->
      </div>

      <%= f.hidden_field :fac_man_only, :value => false %>
      <%= f.hidden_field :state, :value => "Resolved" %> 
      
      <div class="actions">
        <%= f.submit "Resolve Workorder" %>
      </div>
<% end %> <!-- end form --> 