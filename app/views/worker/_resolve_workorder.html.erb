<%= form_for(@worklog) do |f| %>
      <div class="field">
          <%= f.label :state %><br />
          <%= f.select(:state, options_for_select(["Resolved"])) %> <!--Default text is the current user's building-->
      </div>
      <div class="field">
        <%= f.label "If accepting, input approximate time/date that you will fix it. If deferring, input your reason why." %><br />
        <%= f.text_area :description, :cols => "15", :rows => "8" %> <!--Default text is the current user's building-->
      </div>
      
      <div class="actions">
        <%= f.submit %>
      </div>
<% end %> <!-- end form --> 