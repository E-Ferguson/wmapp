<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class="row">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>

  <div class="row">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Log in", :class => "btn btn-primary" %>
<% end %>
