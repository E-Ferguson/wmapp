<%= form_for([@workorder,@worklog]) do |f| %>
  <%= render 'worklog_error_message' %>
    <div class="field">

      <%= f.label "Explain why you are re-opening this workorder" %>
      <%= f.text_area :description, :cols => "15", :rows => "8" %> <!--Default text is the current user's building-->

      <%= f.hidden_field :state, :value => "Reopened" %> 

      <%= f.hidden_field :fac_man_only, :value => false %>
      
      <div class="row-fluid" id="button">
        <%= f.submit "Reopen Workorder", class: "btn btn-large btn-primary" %>
      </div>
    </div>
<% end %> <!-- end form --> 