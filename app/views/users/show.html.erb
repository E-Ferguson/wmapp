<h1><%= current_user.name %>'s Workorders</h1>

<div class="row">

  <div class="span8">
    <% if current_user.workorders.any? %>
      <h3><%= current_user.workorders.count %> Total Workorders</h3>
      <ol class="workorders">
        <%= render @workorders %>
      </ol>
      
    <% end %>
  </div>

</div>
