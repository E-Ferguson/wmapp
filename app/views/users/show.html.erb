<h1><%= current_user.name %>'s Workorders</h1>
<h5>Click on 'Workorder Details' to check out updates and to append notes for Facilities Management!</h5>

<div class="row">

  <div class="span8">
    <% if current_user.workorders.any? %>
      <h3><%= current_user.workorders.count %> Total Workorders</h3>
      <ol class="workorders">
        <%= render @workorders %>
      </ol>
      
    <% end %>
  </div>

</div>
